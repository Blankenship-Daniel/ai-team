#!/usr/bin/env python3
"""
AI Test Coverage Team CLI wrapper
Specialized version focusing on achieving 100% test coverage
"""

import os
import sys
import subprocess

# Get the directory where this script is located
SCRIPT_DIR = os.path.dirname(os.path.abspath(__file__))
MAIN_SCRIPT = os.path.join(SCRIPT_DIR, "create_test_coverage_team.py")


def main():
    """Execute test coverage team creation script"""
    try:
        # Use test coverage team creation script
        cmd = [sys.executable, MAIN_SCRIPT] + sys.argv[1:]
        subprocess.run(cmd, check=True)
    except subprocess.CalledProcessError as e:
        sys.exit(e.returncode)
    except KeyboardInterrupt:
        print("\n⚠️  Interrupted by user")
        sys.exit(1)
    except Exception as e:
        print(f"❌ Error: {e}")
        sys.exit(1)


if __name__ == "__main__":
    main()
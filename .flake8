[flake8]
max-line-length = 120
max-complexity = 10
exclude =
    .git,
    __pycache__,
    docs/build,
    build,
    dist,
    .venv,
    venv,
    .env,
    frontend/node_modules,
    backend/venv

ignore =
    E203,
    W503,
    D100,
    D101,
    D102,
    D103

# Enable specific warnings
select = E,W,F,C,N
per-file-ignores =
    tests/*:D100,D101,D102,D103,D104
    test_*.py:D100,D101,D102,D103,D104

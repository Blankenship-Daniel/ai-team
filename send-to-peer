#!/bin/bash
# Enhanced universal peer messaging script
# Usage: send-to-peer <target-session> "<message>"

show_help() {
    cat << 'EOF'
ğŸ“¤ Send-to-Peer - Universal Team Messaging

USAGE:
    send-to-peer <target-session> "<message>"

EXAMPLES:
    # Send message to backend team
    send-to-peer backend-team "Frontend ready for API integration"

    # Coordinate with mobile team
    send-to-peer mobile-team "Web UI changes pushed, please sync styles"

    # Update DevOps team
    send-to-peer devops-team "New deployment ready for staging review"

QUICK TIPS:
    ğŸ’¡ Use quotes around messages with spaces
    ğŸ” Check responses with: check-peer-messages.sh
    ğŸ“‹ See active bridges: bridge_registry.py list
    ğŸ“Š Session status: bridge_registry.py status <your-session>

COORDINATION WORKFLOW:
    1. ğŸ“¤ Send message to peer team
    2. ğŸ”„ They see notification in their orchestrator pane
    3. ğŸ“¥ Check their response with check-peer-messages.sh
    4. ğŸ¤ Coordinate on shared tasks!
EOF
}

# Check arguments
if [ $# -eq 0 ] || [ "$1" = "help" ] || [ "$1" = "--help" ] || [ "$1" = "-h" ]; then
    show_help
    exit 0
fi

if [ $# -lt 2 ]; then
    echo "âŒ Error: Missing arguments"
    echo "ğŸ’¡ Usage: send-to-peer <target-session> \"<message>\""
    echo "ğŸš€ Example: send-to-peer backend-team \"Ready for API review\""
    echo ""
    echo "ğŸ“– For more help: send-to-peer help"
    exit 1
fi

TARGET_SESSION="$1"
MESSAGE="$2"
CURRENT_SESSION=$(tmux display-message -p '#{session_name}' 2>/dev/null)

# Validate current session
if [ -z "$CURRENT_SESSION" ]; then
    echo "âŒ Error: Not running in a tmux session"
    echo "ğŸ’¡ This tool must be run from within a tmux session"
    exit 1
fi

# Check if target session exists
if ! tmux has-session -t "$TARGET_SESSION" 2>/dev/null; then
    echo "âš ï¸  Warning: Target session '$TARGET_SESSION' not found"
    echo "ğŸ” Available sessions:"
    tmux list-sessions 2>/dev/null | cut -d: -f1 | sed 's/^/   /'
    echo ""
    echo "ğŸ’¡ Create bridge first: bridge_registry.py create $CURRENT_SESSION $TARGET_SESSION \"coordination context\""
    exit 1
fi

# Create coordination directory if needed
mkdir -p .ai-coordination/messages

# Generate message
MESSAGE_ID="${CURRENT_SESSION}-$(date +%s%N | cut -c1-13)"
TIMESTAMP=$(date -u +"%Y-%m-%dT%H:%M:%S.%3NZ")

# Create message file
cat > ".ai-coordination/messages/${MESSAGE_ID}.json" << EOF
{
  "from_session": "$CURRENT_SESSION",
  "to_session": "$TARGET_SESSION",
  "message": "$MESSAGE",
  "timestamp": "$TIMESTAMP",
  "message_id": "$MESSAGE_ID"
}
EOF

# Send notification to target session orchestrator
ESCAPED_MESSAGE=$(printf '%q' "$MESSAGE")
echo "ğŸ“¤ Sending message to $TARGET_SESSION..."

if tmux send-keys -t "${TARGET_SESSION}:0.0" "ğŸ“¨ New message from $CURRENT_SESSION: $ESCAPED_MESSAGE" Enter 2>/dev/null; then
    echo "âœ… Message delivered to $TARGET_SESSION"
    echo "ğŸ“ Message: $MESSAGE"
    echo "ğŸ•’ Sent at: $(date)"
    echo ""
    echo "ğŸ’¡ Check for replies: check-peer-messages.sh"
else
    echo "âš ï¸  Message saved but notification failed (target session may not have orchestrator pane)"
    echo "ğŸ“ Message saved as: $MESSAGE_ID.json"
fi
